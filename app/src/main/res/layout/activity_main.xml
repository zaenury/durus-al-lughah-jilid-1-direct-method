<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_utama"
        tools:context=".MainActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"

                    >

                    <ImageButton
                        android:id="@+id/pelajaran2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@android:color/white"
                        android:src="@drawable/dua" />

                    <TextView
                        android:id="@+id/dua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ الثَّانِي"
                        android:textSize="20sp"
                        />

                    <ImageButton
                        android:id="@+id/pelajaran4"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/empat" />

                    <TextView
                        android:id="@+id/empat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ الرَّابِعُ"
                        android:textSize="20dp"/>

                    <ImageButton
                        android:id="@+id/pelajaran6"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/enam" />

                    <TextView
                        android:id="@+id/enam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اَلدَّرْسُ السَّادِسُ"
                        android:textSize="20sp"/>

                    <ImageButton
                        android:id="@+id/pelajaran8"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/delapan" />

                    <TextView
                        android:id="@+id/delapan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اَلدَّرْسُ الثَامِنُ"
                        android:textSize="20dp"/>

                    <ImageButton
                        android:id="@+id/pelajaran10"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/sepuluh" />

                    <TextView
                        android:id="@+id/sepuluh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ الْعَاشِرُ"
                        android:textSize="20dp"/>

                    <ImageButton
                        android:id="@+id/pelajaran12"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/duabelas" />

                    <TextView
                        android:id="@+id/duabelas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ الثَانِي عَشَرَ"
                        android:textSize="20dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/pelajaran1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@android:color/white"
                        android:src="@drawable/satu"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/satu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ الْأَوَّلُ"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/pelajaran3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/tiga" />

                    <TextView
                        android:id="@+id/tiga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ الثَّالِثُ"
                        android:textSize="20sp"/>

                    <ImageButton
                        android:id="@+id/pelajaran5"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/lima" />

                    <TextView
                        android:id="@+id/lima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ الْخَامِسُ"
                        android:textSize="20sp"/>

                    <ImageButton
                        android:id="@+id/pelajaran7"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/tujuh" />

                    <TextView
                        android:id="@+id/tujuh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَرْسُ السَابِعُ"
                        android:textSize="20sp"/>

                    <ImageButton
                        android:id="@+id/pelajaran9"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/sembilan" />

                    <TextView
                        android:id="@+id/sembilan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ التَّاسِعُ"
                        android:textSize="20sp"/>

                    <ImageButton
                        android:id="@+id/pelajaran11"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        android:src="@drawable/sebelas" />

                    <TextView
                        android:id="@+id/sebelas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدَّرْسُ الْحَادِيْ عَشَرَ"
                        android:textSize="20sp"/>



                </LinearLayout>


            </LinearLayout>
    <ImageButton
        android:id="@+id/tamrin"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        android:src="@drawable/question"
        />

    <TextView
        android:id="@+id/latihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تَمْرِيْنَاتٌ"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Background"
        android:onClick="loadSlides"
        android:text="slide"
        android:textColor="@android:color/white"
        tools:ignore="OnClick"
        ></Button>
</LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/item_navigasi" />

</android.support.v4.widget.DrawerLayout>